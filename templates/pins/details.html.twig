{% extends 'base.html.twig' %}

{% block title %} {{ pin.title }} {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Page d'affichage du pin sélectionné </h1>
    

        <article>
            <h2>{{ pin.title }}</h2>
            <p>{{ pin.description }}</p>
        </article>
<a href="{{ path('app_pins_edit', {'id': pin.id}) }}">Modifier ce pin</a><br>
<a href="#" onclick="event.preventDefault(); confirm('êtes-vous sûr de vouloir supprimer ce pin?') && document.getElementById('js-pin-delete-form').submit();">Supprimer </a>
<br>
<a href="{{ path('app_pins') }}">Retour à la liste des pins</a>
</div>

<form id="js-pin-delete-form" action="{{ path('app_pins_delete', {'id': pin.id}) }}" method="post" style="display:none;">
    <input type="hidden" name="_method" value="DELETE">
</form>

{% endblock %}
